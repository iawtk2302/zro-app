default_platform(:android)

platform :android do

  lane :beta do
    firebase_app_distribution(
        app: ENV["FIREBASE_APP_ID"], # Lấy App ID từ secret
        service_credentials_file_content: ENV["FIREBASE_CREDENTIALS_JSON"], # JSON credentials từ secret
        apk_path: "../build/app/outputs/flutter-apk/app-release.apk",
        groups: "testers"
    )
  end  
end

